@model FeedbackViewModel

@using AlfaCar43Project.Models;


<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Связаться с нами</h2>
        </div>
    </div>
    @using (Html.BeginForm("SendEmail", "Feedback", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <form id="contactForm" name="sentMessage" novalidate="novalidate">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @title = "Пожалуйста, введите ваше имя", @id = "name", @type = "text", @placeholder = "Ваше Имя *", @required = "required" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @title = "Пожалуйста, введите номер вашего мобильного телефона", @id = "phone", @type = "tel", @pattern = @"(\+?\d[- .]*){7,13}", @placeholder = "Ваш телефон *", @required = "required" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Attachment, new { @class = "form-control", @title = "Пожалуйста, выберите изображение", @id = "file", @type = "file", @placeholder = "Выберите файл" })
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @title = "Пожалуйста, напишите свое сообщение", @id = "message", @placeholder = "Ваше сообщение *", @required = "required" })
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Отправить сообщение</button>
                        </div>
                    </div>
                </form>
                <div>
                </div>
            </div>
        </div>
    }

</div>

